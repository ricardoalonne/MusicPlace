@model MusicPlace.Models.Song

<p class="mb-4">
    Aquí podrás administrar a las canciones del momento.
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h5>
        <a class="btn btn-primary" asp-controller="Song" asp-action="Index" asp-route-id="-1"><i class="fas fa-fw fa-plus-circle"></i> Nueva Canción</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" disabled />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <a asp-controller="Song" asp-action="Actualizar" asp-route-id="@Model.Id" alt="Editar" class="btn btn-primary">
                <i class="fas fa-edit text-light"></i> Editar Canción
            </a>
        </div>
    </div>
</div>