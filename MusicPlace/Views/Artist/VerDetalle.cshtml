@model MusicPlace.Models.Artist

    <p class="mb-4">
        Aquí podrás administrar a los artistas del momento.
    </p>


    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h5 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h5>
            <a class="btn btn-outline-primary" asp-action="Index"><i class="fas fa-fw fa-arrow-left"></i> Regresar a Artistas</a>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="text-center">
                <a asp-controller="Artist" asp-action="Actualizar" asp-route-id="@Model.Id" alt="Editar" class="btn btn-primary">
                    <i class="fas fa-edit text-light"></i> Editar Artista
                </a>
            </div>
        </div>
    </div>