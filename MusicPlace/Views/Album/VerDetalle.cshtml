@model MusicPlace.Models.Album

<p class="mb-4">
    Aquí podrás administrar a los albums del momento.
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h5>
        <a class="btn btn-outline-primary" asp-controller="Album" asp-action="Index" asp-route-id="-1"><i class="fas fa-fw fa-arrow-left"></i> Regresar a Albunes</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" disabled />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3" disabled> </textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="text-center">
            <a asp-controller="Album" asp-action="Actualizar" asp-route-id="@Model.Id" alt="Editar" class="btn btn-primary">
                <i class="fas fa-edit text-light"></i> Editar Album
            </a>
        </div>
    </div>
</div>